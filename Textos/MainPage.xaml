<Page
    x:Class="Textos.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Textos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light"
    
    Background="{StaticResource CustomAcrylicLight}">
    <!--Background="{StaticResource CustomAcrylicLight}"-->

    <Grid Margin="10,10,10,8" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        
        <TextBox Margin="10,10,10,0" TextWrapping="Wrap" Text=""
                    Background="{StaticResource CustomAcrylicLight}"
                    Grid.Column="0" Grid.Row="0" AcceptsReturn="True"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    x:Name="textBoxOriginal" PlaceholderText="Texto original"
                    GotFocus="TextBox_GotFocus"
                    TextChanged="textBoxOriginal_TextChanged"/>

        <Grid Height="50" Grid.Column="0" Grid.Row="1">

            <Button Content="Limpiar" HorizontalAlignment="Right"
                    Margin="0,0,10,0" x:Name="btnLimpiarOriginal" 
                    Click="btnLimpiarOriginal_Click"/>

        </Grid>
        

        <TextBox Margin="10,10,10,0" TextWrapping="Wrap" Text=""
                    Background="{StaticResource CustomAcrylicLight}"
                    Grid.Column="1" Grid.Row="0" AcceptsReturn="True"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    IsReadOnly="True" PlaceholderText="Texto sin justificado"
                    x:Name="textBoxFormateado"
                    GotFocus="textBoxFormateado_GotFocus"/>

        <Grid Height="50" Grid.Column="1" Grid.Row="1" Margin="10,0,10,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="&#xE895;" HorizontalAlignment="Right"
                    Margin="0,0,20,0" x:Name="btnActualizar"
                    Height="33"
                    FontFamily="Segoe MDL2 Assets"
                    Click="btnActualizar_Click"/>

            <Button Content="Copiar" Grid.Column="1" x:Name="btnCopiar"
                    Click="btnCopiar_Click"/>

        </Grid>

    </Grid>
</Page>
